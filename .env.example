# Required
OPENCLAW_GATEWAY_TOKEN=        # Gateway auth token (auto-generated if not set)
ANTHROPIC_API_KEY=             # Anthropic API key for Claude models

# Optional: Tailscale (persistent tailnet access)
TAILSCALE_AUTHKEY=             # Tailscale auth key (reusable, pre-approved)
TAILSCALE_HOSTNAME=openclaw-railway  # Tailnet hostname
TAILSCALE_SERVE=true           # Enable Tailscale Serve (HTTPS proxy)

# Optional: GitHub
GITHUB_TOKEN=                  # GitHub PAT for repo access

# Optional: n8n webhook bridge
OPENCLAW_HOOKS_TOKEN=          # Shared secret for webhook auth (OpenClaw <-> n8n)
N8N_WEBHOOK_URL=               # n8n internal URL (e.g. http://Primary.railway.internal:5678)

# Optional: Additional model providers (for fallback chains + muscle models)
OPENAI_API_KEY=                # OpenAI API key (used for embeddings + fallback)
DEEPSEEK_API_KEY=              # DeepSeek API key (cheap reasoning for subagents)
GROK_API_KEY=                  # xAI Grok API key (good for trending/social data)
OPENROUTER_API_KEY=            # OpenRouter API key (multi-model routing + cheap heartbeats)

# State directories (Railway volume mount)
OPENCLAW_STATE_DIR=/data/.openclaw
OPENCLAW_WORKSPACE_DIR=/data/workspace
